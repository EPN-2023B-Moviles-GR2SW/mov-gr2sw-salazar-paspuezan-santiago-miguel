<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".add_proyecto">

    <EditText
        android:id="@+id/input_nombre_nuevo_pry"
        android:layout_width="327dp"
        android:layout_height="50dp"
        android:layout_marginBottom="52dp"
        android:ems="10"
        android:hint="Nombre del Proyecto"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/input_descripcion_nuevo_pry"
        app:layout_constraintEnd_toEndOf="@+id/input_descripcion_nuevo_pry"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/input_descripcion_nuevo_pry" />

    <EditText
        android:id="@+id/input_descripcion_nuevo_pry"
        android:layout_width="330dp"
        android:layout_height="58dp"
        android:layout_marginBottom="92dp"
        android:ems="10"
        android:hint="DescripciÃ³n"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/btn_agregar_pry"
        app:layout_constraintEnd_toEndOf="@+id/btn_agregar_pry"
        app:layout_constraintStart_toStartOf="@+id/btn_agregar_pry" />

    <Button
        android:id="@+id/btn_agregar_pry"
        android:layout_width="359dp"
        android:layout_height="59dp"
        android:text="Agregar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>